@model GatewayViewModel

@{
    ViewData["Title"] = "Gateway Registration Page";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<div class="text-center">
    <h1 class="display-4">Welcome to Gateway Registration Page</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>

    <form enctype="multipart/form-data" asp-controller="home" asp-action="RegisterGateway" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="SerialNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="SerialNumber" class="form-control" placeholder="Serial Number">
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" placeholder="Brand">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" placeholder="Model">
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Ip" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Ip" class="form-control" placeholder="IP">
                <span asp-validation-for="Ip" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Port" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Port" class="form-control" placeholder="Port">
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
    </form>

</div>
